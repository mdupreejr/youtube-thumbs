# YouTube API Credentials
# Get these from https://console.cloud.google.com/
YOUTUBE_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your_client_secret_here

# Home Assistant Configuration
HOME_ASSISTANT_URL=http://homeassistant.local:8123
HOME_ASSISTANT_TOKEN=your_long_lived_access_token_here
MEDIA_PLAYER_ENTITY=media_player.apple_tv

# Service Configuration
PORT=21812
HOST=0.0.0.0
SQLITE_WEB_HOST=127.0.0.1
SQLITE_WEB_PORT=8080

# Rate Limiting (API usage guardrails)
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_PER_DAY=500

# YouTube History Settings
HISTORY_SONGS_TO_CHECK=5

# Retry Settings
MAX_RETRIES=5
RETRY_DELAY_SECONDS=30

# Logging Configuration
LOG_FILE=app.log
USER_ACTION_LOG_FILE=user_actions.log
ERROR_LOG_FILE=errors.log
LOG_LEVEL=INFO
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=30
